<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="{{ path('admin_home') }}" class="site_title">
                <i class="fa fa-photo"></i> <span>{{ 'project.title'|trans }}</span></a>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile">
            <div class="profile_pic">
                <img src="{{ vich_uploader_asset(app.user, 'imageFile')|default(asset('assets/images/user.png')) }}"
                     alt="{{ app.user.username }}" class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>{{ 'admin.welcome'|trans }},</span>
                <h2>{{ app.user.username }}</h2>
            </div>
        </div>
        <!-- /menu profile quick info -->

        <div class="clearfix"></div>

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <h3>{{ 'admin.menu.title'|trans }}</h3>
                <ul class="nav side-menu">
                    <li><a href="{{ path('admin_home') }}"><i class="fa fa-home"></i> {{ 'admin.menu.home'|trans }}</a></li>
                    <li><a href="{{ path('admin_profile') }}"><i class="fa fa-user"></i> {{ 'admin.menu.profile'|trans }}</a></li>
                    <li><a href="{{ path('admin_images') }}"><i class="fa fa-photo"></i> {{ 'admin.menu.images'|trans }}</a></li>
                </ul>
            </div>
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li class=""><a><i class="fa fa-language"></i> {{ 'admin.menu.locale'|trans }} <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu" style="display: none;">
                            {% for key,locale in project_locales %}
                                <li><a href="{{ path('changeLanguage', {'locale': key}) }}">{{ locale|trans }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> {{ 'admin.menu.logout'|trans }}</a></li>
                </ul>
            </div>

        </div>
        <!-- /sidebar menu -->

        <!-- /menu footer buttons -->
        <div class="sidebar-footer hidden-small">
            <a data-toggle="tooltip" data-placement="top" title="Logout" href="{{ path('logout') }}">
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
            </a>
        </div>
        <!-- /menu footer buttons -->
    </div>
</div>